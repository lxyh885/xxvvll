page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #F7F7F7;
  color:#505050;
  font-size:30rpx;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color:#505050;
  font-weight:600;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 55rpx;
  right: 0;
  height: 7rpx;
  background: #F55438;
  width:150rpx;
}

